<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>WORDLE GAME</title>
</head>
<body>
<h1>Welcome to Wordle</h1>
<form id="wordleForm">
    <input type="text" id="guessInput" maxlength="5" placeholder="Enter a 5-letter word">
    <button type="submit">Submit</button>
</form>
<p id="result"></p>
<script>
    document.getElementById("wordleForm").addEventListener("submit", function(event) {
        event.preventDefault();
        let guessInput = document.getElementById("guessInput");
        let guess = guessInput.value;

        fetch(`/api/wordle/guess?guess=${guess}&user=player1`, { method: "POST" })
                .then(response => {
                    if (!response.ok) {
                        return response.text().then(text => { throw new Error(text); });
                    }
                    return response.text();
                })
                .then(data => {
                    document.getElementById("result").innerText = data;
                    guessInput.value = "";
                })
                .catch(error => {
                    document.getElementById("result").innerText = error.message;
                    guessInput.value = "";
                });
    });
</script>

</body>
</html>
