<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="/css/main.css">
    <title>WORDLE GAME</title>
    <style>
        #container {
            display: flex;
            align-items: center;
        }

        #result {
            margin-left: 30px;
        }

        #hintContainer {
            margin-top: 10px;
        }
    </style>
</head>
<body>
<h1>Welcome to Wordle</h1>
<div id="container">
    <form id="wordleForm">
        <label for="guessInput"></label>
        <input type="text" id="guessInput" maxlength="5" placeholder="Enter a 5-letter word">
        <button type="submit">Submit</button>
    </form>
    <p id="result"></p>
</div>
<div id="hintContainer"></div>

<script>
    document.getElementById("wordleForm").addEventListener("submit", function(event) {
        event.preventDefault();
        let guessInput = document.getElementById("guessInput");
        let guess = guessInput.value;

        fetch(`/api/wordle/guess?guess=${guess}`, { method: "POST" })
                .then(response => {
                    if (!response.ok) {
                        return response.text().then(text => { throw new Error(text); });
                    }
                    return response.text();
                })
                .then(data => {
                    let resultElement = document.getElementById("result");
                    let hintContainer = document.getElementById("hintContainer");

                    // Separate the error message and the hint
                    let parts = data.split("Hint:");
                    let message = parts[0].trim();
                    let hint = parts.length > 1 ? parts[1].trim() : "";

                    // Detect if the game is over BEFORE updating the UI
                    let gameOver = data.includes("Game over!") || data.includes("Correct!");
                    if (gameOver) {
                        guessInput.disabled = true;
                        document.querySelector("button[type='submit']").disabled = true;
                    }

                    // Update UI with the message and the hint
                    resultElement.innerText = message;
                    hintContainer.innerText = hint;

                    guessInput.value = "";
                })
                .catch(error => {
                    let resultElement = document.getElementById("result");
                    let hintContainer = document.getElementById("hintContainer");

                    // Separate error message and hint
                    let parts = error.message.split("Hint:");
                    let errorMessage = parts[0].trim();
                    let hint = parts.length > 1 ? parts[1].trim() : "";


                    // Display only the error to the right of the button
                    resultElement.innerText = errorMessage;

                    // Display the hint below the input
                    hintContainer.innerText = hint;

                    guessInput.value = "";
                });
    });
</script>

</body>
</html>
