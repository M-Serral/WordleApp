<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>WORDLE GAME</title>
</head>
<body>
<h1>Welcome to Wordle</h1>
<form id="wordleForm">
    <input type="text" id="guessInput" maxlength="5" placeholder="Enter a 5-letter word">
    <button type="submit">Submit</button>
</form>
<p id="result"></p>
<script>
    document.getElementById("wordleForm").addEventListener("submit", function(event) {
        event.preventDefault();
        let guess = document.getElementById("guessInput").value;

        fetch(`/api/wordle/guess?guess=${guess}&user=player1`, { method: "POST" }) // Includes a fixed user “player1”.
                .then(response => {
                    if (!response.ok) { // If the HTTP code is not 200, throw an error
                        return response.text().then(text => { throw new Error(text); });
                    }
                    return response.text(); // Returns text if the answer is 200 OK
                })
                .then(data => {
                    document.getElementById("result").innerText = data; // Display the message in the frontend
                })
                .catch(error => {
                    document.getElementById("result").innerText = error.message; // Display errors such as 429 on the screen
                });
    });
</script>

</body>
</html>

